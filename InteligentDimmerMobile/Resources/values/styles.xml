<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme.Base" parent="Theme.Holo.Light.NoActionBar">
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:colorBackground">@color/white</item>
  </style>

  <style name="ConnectionUnderline">
    <item name="android:layout_height">@dimen/connectionUnderlineHeight</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/black</item>
  </style>

  <style name="HoloButtonStateChangeStyle">
    <item name="android:background">@color/holobutton_selector</item>
  </style>
  
  <style name="ConnectionHoloButtonStyle" parent="HoloButtonStateChangeStyle">
    <item name="android:textSize">@dimen/connectionButtonTextSize</item>
  </style>

  <style name="ConnectionTextViewStyle">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">20dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:gravity">center</item>
  </style>
  
</resources>